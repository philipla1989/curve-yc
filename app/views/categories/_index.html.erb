<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-warning btn-sm", remote: true %></td>
        <td><%= link_to 'Destroy', category, method: :delete,
                        data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm", remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: "btn btn-primary btn-sm", data: { toggle: "modal", target: "#categoryModal" } %>
