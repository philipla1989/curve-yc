<p id="notice"><%= notice %></p>
<h4>Users Management</h4>
<br>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Reset password', reset_password_admin_path(user), class: "btn btn-sm btn-warning" %></td>
        <td><%= link_to 'Destroy', admin_path(user),
                        method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add User', new_admin_path, class: "btn btn-sm btn-primary" %>
<br>
