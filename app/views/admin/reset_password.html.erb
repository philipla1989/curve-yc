<br>
<div class="container">
  <div class="row">
    <h4>Reset Password</h4>
  </div>
</div>
<%= form_for(@user, url: "/admin/#{@user.id}") do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-xl-12">
        <div class="form-group row">
          <%= form.label :email, class: "col-form-label col-2" %>
          <%= form.text_field :email, id: :email_user, class: "form-control col-6", disabled: true %>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-xl-12">
        <div class="form-group row">
          <%= form.label :password, class: "col-form-label col-2" %>
          <%= form.password_field :password, id: :password_user, class: "form-control col-6" %>
        </div>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= form.submit :Submit, class: "btn btn-success" %>
  </div>
<% end %>
