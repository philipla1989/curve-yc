<%= form_with(model: [@story, career], local: true) do |form| %>
  <% if career.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(career.errors.count, "error") %> prohibited this career from being saved:</h2>

      <ul>
      <% career.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-lg-5 col-xl-5">
        <div class="form-group row">
          <%= form.label :name, "Career", class: "col-form-label col-4" %>
          <%= form.text_field :name, id: :career_name, class: "form-control col-6" %>
        </div>
      </div>
      <div class="col-lg-6 col-xl-6">
        <div class="form-group row">
          <%= form.label :title, class: "col-form-label col-4" %>
          <%= form.text_field :title, id: :career_title, class: "form-control col-6" %>
        </div>
      </div>
      <div class="col-lg-5 col-xl-5">
        <div class="form-group row">
          <%= form.label :industry, class: "col-form-label col-4" %>
          <%= form.text_field :industry, id: :career_industry, class: "form-control col-6" %>
        </div>
      </div>
      <div class="col-lg-6 col-xl-6">
        <div class="form-group row">
          <%= form.label :company, class: "col-form-label col-4" %>
          <%= form.text_field :company, id: :career_company, class: "form-control col-6" %>
        </div>
      </div>
      <div class="col-lg-6 col-xl-5">
        <div class="form-group row">
          <%= form.label :company_type, class: "col-form-label col-4" %>
          <%= form.text_field :company_type, id: :career_company_type, class: "form-control col-6" %>
        </div>
      </div>
      <div class="hrDivider col-lg-12 col-xl-12"></div>
      <div class="col-lg-12 col-xl-12"><br></div>

      <div class="col-lg-5 col-xl-5">
        <div class="form-group row">
          <%= form.label :precedent_career, class: "col-form-label col-5"  %>
          <%= form.text_field :precedent_career, id: :career_precedent_career, class: "form-control col-6" %>
          <%# <%= form.select :precedent_career, [ ["Read Only", "read"], ["IP Voice Telephony", "ip_voice"], ["IP Video Telephony", "ip_video_telephony"], ["Enterprise Gateways", "enterprise_gateways"], ["Consumer ATAs", "consumer_atas"], ["IP PBX", "ip_pbx"], ["Master of All", "all"] ], {prompt: "Select Permission Level"},
                        {:multiple => true, class: "form-control col-6", id: "multiselect"} %>
        </div>
      <div>
    </div>
  </div>
  <br>
  <div class="col-lg-12 col-xl-12">
    <div class="form-group">
      <div class="actions">
        <%= hidden_field_tag(:story_id, params[:story_id]) %>
        <%= form.submit :Submit, class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>

