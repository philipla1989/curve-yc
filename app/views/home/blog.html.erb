<div class="container container-fluid"><br>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <h2 class="centerText">Curver Your Career Blog</h2>
      <% @posts.each do |post| %>
        <div class="container" style="background-color: rgba(18, 116, 217, 0.02);">
          <div class="container">
            <div class="row">
              <div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 ">
                <div class="form-group row">
                  <div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 right">Published: <%= post.created_at.strftime("%d/%m/%Y") %></div>
                  <%= post.title %>
                </div>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="row">
              <div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 ">
                <div class="form-group">
                  <%= markdown(post.content) %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
