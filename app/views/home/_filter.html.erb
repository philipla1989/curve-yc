<%= form_with url: filter_by_path do |form| %>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 centerText h5">
      <b>
        <h4 class="h4-custom">My career is</h4>
        <div class="select-div1">
          <%= form.select :ini_career_path, get_options("Career Path"), { include_blank: "Anything" },
                                          { class: "form-control mobileSelect select-bottom", id: "iniCareerSelect" } %>
        </div>
        </br>
        <h4 class="h4-custom">And I am interested in...</h4>
        <div class="select-div2">
          <%= form.select :sub_career_path, get_options("Career Path"), { include_blank: "Anything" },
                                          { class: "form-control mobileSelect select-bottom", id: "subCareerSelect" } %>
        </div>        
        </br>                                                  
      </b>
    </div>
  </div>
</div>
<br>
<div class="center">
  <%= form.submit "FILTER STORIES", class: "btn btn-purple" %>
</div>
<% end %>
