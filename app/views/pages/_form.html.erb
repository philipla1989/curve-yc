<%= form_with(model: page, local: true) do |form| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-xl-12">
        <div class="form-group row">
          <%= form.label :name, class: "col-form-label col-12" %>
          <%= form.text_field :name, id: :page_name, class: "form-control col-12" %>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-xl-12">
        <div class="form-group row">
          <%= form.label :content, "Content", class: "col-form-label col-12" %>
          <%= form.text_area :content, id: :page_content, class: "form-control textArea" %>
        </div>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= form.submit :Submit, class: "btn btn-success" %>
  </div>
<% end %>
