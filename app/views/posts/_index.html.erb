<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.topic %></td>
        <td><%= link_to 'Preview', post_path(slug: post), class: "btn btn-primary btn-sm", remote: true %></td>
        <td><%= link_to 'Edit', edit_post_path(slug: post), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Destroy', post_path(slug: post), method: :delete,
                        data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-primary btn-sm" %>
