<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-xl-12">
        <div class="form-group row">
          <%= form.label :title, class: "col-form-label col-12" %>
          <%= form.text_field :title, id: :post_title, class: "form-control col-12" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-5 col-xl-5">
        <div class="form-group row">
          <%= form.label :topic, class: "col-form-label col-5"  %>
          <%= form.select :topic, get_options("Blog Topic"), { include_blank: "Select..." }, { class: "form-control col-6" } %>
        </div>
      <div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-xl-12">
        <div class="form-group row">
          <%= form.label :author, class: "col-form-label col-12" %>
          <%= form.text_field :author, id: :post_author, class: "form-control col-12" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-xl-12">
        <div class="form-group row">
          <%= form.label :meta_name, class: "col-form-label col-12" %>
          <%= form.text_field :meta_name, id: :post_meta_name, class: "form-control col-12" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-xl-12">
        <div class="form-group row">
          <%= form.label :meta_content, class: "col-form-label col-12" %>
          <%= form.text_field :meta_content, id: :post_meta_content, class: "form-control col-12" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-xl-12">
        <div class="form-group row">
          <%= form.label :vanity_url, class: "col-form-label col-12" %>
          <%= form.text_field :slug, id: :post_slug, class: "form-control col-7" %>
          <span class="col-6">e.g. "some vanity url"</span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-xl-12">
        <div class="form-group row">
          <%= form.label :content, "Content", class: "col-form-label col-12" %>
          <%= form.text_area :content, id: :post_content, class: "form-control textArea" %>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="actions">
    <%= form.submit :Submit, class: "btn btn-success" %>
  </div>
  </div>
<% end %>
