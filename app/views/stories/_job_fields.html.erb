<fieldset>
<div class="col-lg-12 col-xl-12">
    <h4>Job info</h4>
  </div>
<div class="container">
  <div class="col-lg-12 col-xl-12">
    <div class="form-group row">

    </div>
  </div>

  <div class="col-lg-12 col-xl-12">
    <div class="form-group row">
      <%= form.label :age, "Age", class: "col-form-label col-2"  %>
      <%= form.number_field :age, id: :job_age, class: "form-control col-2" %>
      <div class="col-2"></div>
      <%= form.hidden_field :_destroy %>
      <%= link_to "Remove Job", '#', class: "remove_fields btn btn-danger btn-sm col-2" %>
    </div>
  </div>
  <div class="col-lg-12 col-xl-12">
    <div class="form-group row">
      <%= form.label :title, "Title", class: "col-form-label col-2"  %>
      <%= form.text_field :title, id: :job_title, class: "form-control col-9" %>
    </div>
  </div>
  <div class="col-lg-12 col-xl-12">
    <div class="form-group row">
      <%= form.label :company, "Company", class: "col-form-label col-2"  %>
      <%= form.text_field :company, id: :job_company, class: "form-control col-9" %>
    </div>
  </div>
  <div class="col-lg-12 col-xl-12">
    <div class="form-group row">
      <%= form.label :company_type, "Company Type", class: "col-form-label col-2"  %>
      <%= form.text_field :company_type, id: :job_company_type, class: "form-control col-9" %>
    </div>
  </div>
  <div class="col-lg-12 col-xl-12">
    <div class="form-group row">
      <%= form.label :industry, "Industry", class: "col-form-label col-2"  %>
      <%= form.select :industry, get_options("Industry"), { include_blank: "Select..." }, { class: "form-control col-9" }   %>
    </div>
  </div>
</div>
</fieldset>
