          <tr><td class="grayTable"><strong>Career Path</strong></td><td><%= @story.ini_career_path %></td><td><%= @story.sub_career_path %></td></tr>
          <tr><td class="grayTable"><strong>Idustry</strong></td><td><%= @story.ini_industry %></td><td><%= @story.sub_industry %></td></tr>
          <tr><td class="grayTable"><strong>Company</strong></td><td><%= @story.ini_company %></td><td><%= @story.sub_company %></td></tr>
          <tr><td class="grayTable"><strong>Company Type</strong></td><td><%= @story.ini_company_type %></td><td><%= @story.sub_company_type %></td></tr>
        </tbody>
      </table>
    </div>
  </div>
  <br>
  <p class="h5">
    <strong>Sumary</strong>
    <br>
    <%= @story.sumary %>
  </p>
  <br>
  <p class="h5">
    <strong>Table of Contents</strong>
    <br>
    <%= "Content should be here!" %>
  </p>
  <br>
  <p class="h5">
    <strong>The Story</strong>
    <br>
    <%= "Content should be here!" %>
  </p>
  <%= link_to 'Back', root_path, class: "btn btn-info" %>
  <br>
  <br>
  <span></span>
</div>
