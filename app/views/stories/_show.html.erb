<div class="container">
  <br>
  <%= link_to 'Back', root_path, class: "btn btn-primary right" %>
  <br>
  <h2 class="centerText"><%= @story.name %></h2>
  <div class="container" style="background-color: rgba(18, 116, 217, 0.02);">
    <p class="h5">
    </p>
    <p class="h5">
      <strong>Location:</strong> <%= @story.location %>
    </p>
    <p class="h5">
      <strong>Education:</strong> <%= @story.education %>
    </p>
    <p class="h5">
      <strong>Linkedin url:</strong>
      <a href="<%= @story.linkedin_url %>" target="_blank"><%= @story.linkedin_url %></a>
    </p>
  </div>
  <br>
  <div class="row">
    <div class="col-lg-10 col-sm-12 col-xl-6">
      <%= render "story_table", story: @story %>
    </div>
  </div>
  <br>
  <div class="container" style="background-color: rgba(18, 116, 217, 0.02);">
    <p class="h5">
      <strong>Path</strong>
      <br>
      <% if check_single_career(@careers) %>
        <%= @story.ini_career_path %>, <%= @story.ini_company %> <%= image_tag("/assets/right-arrow.png", class: "imgArrowStory") %> <%= @story.careers.first.name %>, <%= @story.careers.first.company %>
      <% else %>
        <%= @story.ini_career_path %>, <%= @story.ini_company %>
        <% @careers.each do |career| %>
          &nbsp; <%= image_tag("/assets/right-arrow.png", class: "imgArrowStory") %> <%= career.name %>, <%= career.company %>
        <% end %>
      <% end %>

    </p>
  </div>
  <br>
  <div class="container" style="background-color: rgba(18, 116, 217, 0.02);">
    <p class="h5">
      <strong>Sumary</strong>
      <br>
      <div class="h5"><%= markdown(@story.sumary) %></div>
    </p>
  </div>
  <br>
  <p class="h5">
    <strong>Table of Contents</strong>
    <br>
    <% if check_single_career(@careers) %>
      <p class="h5">
        <div class="col-lg-12 col-md-12 col-sm-12">
          <div class="h5">
            <b>Career Change: </b>
            <%= get_precedent_career(@careers.first) %>, <%= @story.ini_company %>  <%= image_tag("/assets/right-arrow.png", class: "imgArrowStory") %>  <%= @careers.first.name %> / <%= @careers.first.title %>, <%= @careers.first.company %>
          </div>
        </div>
      </p>
      <div class="container h5" style="background-color: rgba(18, 116, 217, 0.02);">
        <% @careers.first.story_questions.order(:created_at).each do |sq| %>
          <a href="/stories/<%= @careers.first.story_id %>#question-<%= sq.id %>" data-turbolinks="false"><%= sq.question %></a>
          <br>
        <% end %>
      </div>
      <%= render "questions_list", career: @careers.first %>
    <% else %>
      <% i = 0 %>
      <% @careers.each do |career| %>
        <% i+= 1 %>
        <div class="h5">
          <p class="h5">
            <div class="col-lg-12 col-md-12 col-sm-12">
              <b>Career Change #<%= i %>:</b>
              <%= get_precedent_career(career) %>, <%= @story.ini_company %>  <%= image_tag("/assets/right-arrow.png", class: "imgArrowStory") %>  <%= career.name %> / <%= career.title %>, <%= career.company %>
            </div>
          </p>
          <div class="container" style="background-color: rgba(18, 116, 217, 0.02);">
            <p class="h5">
              <% career.story_questions.order(:created_at).each do |sq| %>
                <a href="/stories/<%= career.story_id %>#question-<%= sq.id %>" data-turbolinks="false"><%= sq.question %></a>
                <br>
              <% end %>
            </p>
          </div>
        </div>
      <% end %>
      <br>
      <p class="h5">
        <strong>The Story</strong>
      </p>
      <% i = 0 %>
      <% @careers.each do |career| %>
        <% i+= 1%>
        <p class="h5">
            <b>Career Change #<%= i %>:</b>
            <%= get_precedent_career(career) %>, <%= @story.ini_company %> <%= image_tag("/assets/right-arrow.png", class: "imgArrowStory") %> <%= career.name %> / <%= career.title %>, <%= career.company %>
          </p>
        <div class="h5">
          <%= render "questions_list", career: career %>
        </div>
      <% end %>
    <% end %>
  </p>
  <%= link_to 'Back', root_path, class: "btn btn-primary" %>
  <br>
  <br>
  <span></span>
</div>
