<%= form_with(model: story) do |form| %>
  <% if story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-lg-5 col-xl-5">
        <div class="form-group row">
          <%= form.label :name, class: "col-form-label col-5" %>
          <%= form.text_field :name, id: :story_name, class: "form-control col-6" %>
        </div>
      </div>
      <div class="col-lg-6 col-xl-6">
        <div class="form-group row">
          <%= form.label :location, class: "col-form-label col-3" %>
          <%= form.text_field :location, id: :story_location, class: "form-control col-6" %>
        </div>
      </div>
      <div class="col-lg-12 col-xl-12">
        <div class="form-group row">
          <%= form.label :education, class: "col-form-label col-2" %>
          <%= form.text_field :education, id: :story_education, class: "form-control col-9" %>
        </div>
      </div>
      <div class="col-lg-12 col-xl-12">
        <div class="form-group row">
          <%= form.label :linkedin_url, "LinkedIn", class: "col-form-label col-2" %>
          <%= form.text_field :linkedin_url, id: :story_linkedin_url, class: "form-control col-9" %>
        </div>
      </div>
      <div class="col-lg-12 col-xl-12">
        <div class="form-group row">
          <%= form.label :vanity_url, "Vanity Url", class: "col-form-label col-2" %>
          <%= form.text_field :vanity_url, id: :story_vanity_url, class: "form-control col-9" %>
        </div>
      </div>
      <div class="col-lg-12 col-xl-12">
        <div class="form-group row">
          <%= form.label :quote, "Quote", class: "col-form-label col-2" %>
          <%= form.text_field :quote, id: :story_quote, class: "form-control col-9" %>
        </div>
      </div>
      <div class="hrDivider col-lg-12 col-xl-12"></div>
      <div class="col-lg-12 col-xl-12"><br></div>

      <div class="col-lg-5 col-xl-5">
        <div class="form-group row">
          <%= form.label :ini_age, "Initial Age", class: "col-form-label col-5"  %>
          <%= form.number_field :ini_age, id: :story_ini_age, class: "form-control col-2" %>
        </div>
        <div class="form-group">
          <%= form.label :ini_title, "Initial Title", class: "col-form-label"  %>
          <%= form.select :ini_title, get_options("Title"), { include_blank: "Select..." }, { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= form.label :ini_industry, "Initial Industry", class: "col-form-label"  %>
          <%= form.select :ini_industry, get_options("Industry"), { include_blank: "Select..." }, { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= form.label :ini_company_type, "Initial Company Type", class: "col-form-label"  %>
          <%= form.text_field :ini_company_type, id: :story_ini_company_type, class: "form-control" %>
        </div>
      </div>

      <div class="col-lg-6 col-xl-6">
        <div class="form-group row">
          <%= form.label :sub_age, "Subsequent Age", class: "col-form-label col-5"  %>
          <%= form.number_field :sub_age, id: :story_sub_age, class: "form-control col-2" %>
        </div>
        <div class="form-group">
          <%= form.label :ini_career_path, "Initial Career Path", class: "col-form-label"  %>
          <%= form.select :ini_career_path, get_options("Career Path"), { include_blank: "Select..." }, { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= form.label :ini_company, "Initial Company", class: "col-form-label"  %>
          <%= form.text_field :ini_company, id: :story_ini_company, class: "form-control" %>
        </div>
      </div>
      <div class="hrDivider col-lg-12 col-xl-12"></div>
      <div class="col-lg-12 col-xl-12"><br></div>

      <div class="col-lg-12 col-xl-12">
        <div class="form-group">
            <%= form.label :sumary, class: "col-form-label" %>
            <%= form.text_area :sumary, id: :story_sumary, class: "form-control textArea" %>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="col-lg-12 col-xl-12">
    <div class="form-group">
      <div class="actions">
        <%= form.submit :Submit, class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>
