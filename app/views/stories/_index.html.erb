<p id="notice" class="alert" role="alert"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Ini title</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.name %></td>
        <td><%= story.location %></td>
        <td><%= story.ini_title %></td>
        <td><%= link_to 'Manage Careers', story_careers_path(story.id),
                        class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Show', story_path(slug: story), class: "btn btn-info btn-sm", remote: true %></td>
        <td><%= link_to 'Edit', edit_story_path(slug: story), class: "btn btn-warning btn-sm", remote: true %></td>
        <td><%= link_to 'Delete', story_path(slug: story), method: :delete, data: { confirm: 'Are you sure?' },
                        class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Story', "#", class: "btn btn-primary btn-sm", data: { toggle: "modal", target: "#storyModal" } %>

<div id="editFormContainer"></div>
<div id="showFormContainer"></div>
<div id="storyQuestionsModalContainer"></div>

<%= render "shared/modals/story_modal" %>
