<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Linkedin url</th>
      <th>Ini title</th>
      <th>Sub title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.name %></td>
        <td><%= story.location %></td>
        <td><%= story.linkedin_url %></td>
        <td><%= story.ini_title %></td>
        <td><%= story.sub_title %></td>
        <td><%= link_to 'Show', story %></td>
        <td><%= link_to 'Edit', edit_story_path(story) %></td>
        <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Story', "#", class: "btn btn-primary btn-sm", data: { toggle: "modal", target: "#storyModal" } %>

<%= render "shared/modals/story_modal" %>
